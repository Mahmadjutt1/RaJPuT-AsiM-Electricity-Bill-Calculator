@model Bill_Portal.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}
<div >
 <div class="container">
    <div class="bg-primary col-md-6">
        <table class="table table-hover table-responsive-sm">
            <thead class="text-white">
                <tr>
                    <th>
                        <h2>Edit Role</h2>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
        <div class="row">
            <div class="col-md-6">

                <form method="post" class="mt-3">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>


                    <div class="form-group row">
                        <div class="col-md-12">
                          <div class="float-right">
                                <button type="submit" class="btn btn-outline-primary ml-5">Update</button>
                            <a asp-action="ListRoles" class="btn btn-primary ml-5">Cancel</a>
                   
                            </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>Users in @Model.RoleName role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Roles" asp-action="EditUsersInRole"
                           asp-route-roleId="@Model.Id" asp-route-roleName="@Model.RoleName" class="btn btn-primary float-right" style="width:auto;">
                            Update Users In This Role
                        </a>
                    </div>
                </div>
            </form>

            </div>
        </div>
    </div>
</div>

