@model Bill_Portal.Models.SignUpUserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up User</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<h4>Sign Up User </h4>
<hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="SignUpUser">
                   
                    <div class="form-group">
                        <label asp-for="Full_Name" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="Full_Name" class="text-danger font-weight-bold"></span>
                        <input asp-for="Full_Name" class="form-control" />

                    </div>
                     <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                        <input asp-for="Email" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Mobile" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="Mobile" class="text-danger font-weight-bold"></span>
                        <input asp-for="Mobile" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="Role" class="text-danger font-weight-bold"></span>
                        <input asp-for="Role" class="form-control" />

                    </div>
                    
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="RoleId" class="text-danger font-weight-bold"></span>
                        <input asp-for="RoleId" class="form-control" />
                        
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
                        <input asp-for="Password" class="form-control" />
                 
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>&nbsp; &nbsp;<span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        
                    </div>
                    
                    <div asp-validation-summary="ModelOnly" class="alert-danger font-weight-bold">
                        
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" id="btnSubmit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <span>Already have Account&nbsp;<a asp-action="SignInUser" asp-controller="Accounts">Login</a></span>
    </div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>


    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                window.location.href = '/Accounts/SignInUser/';
            };
        </script>
        
    }

</body>
</html>
